---
import { Image } from "astro:assets";
import qualityAustria from "@/assets/images/qualityAustria-ISO9001_2015.png";
---

<footer class="bg-primary-dark text-primary-foreground">
  <div
    class="mx-auto py-8 px-8 xl:px-20 flex flex-col lg:flex-row md:justify-between gap-x-8 gap-y-6 bg-primary"
  >
    <div class="shrink-0">
      <div class="bg-white rounded inline-block">
        <a href="/pdf/ISO90012015_C724.pdf" target="_blank">
          <Image
            src={qualityAustria}
            alt="Quality Austria"
            loading={"eager"}
            class="mix-blend-multiply w-36"
          />
        </a>
      </div>
    </div>
    <div class="flex flex-row flex-wrap gap-y-4 gap-x-16 items-center">
      <div class="flex items-center gap-4">
        <div class="size-16">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 128 128"
            stroke-width={2.5}
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <title>Ort</title>
            <path d="M64 123A59 59 0 1 0 64 5a59 59 0 0 0 0 118Z"></path>
            <path
              d="m55.5 75 2.4-1.5-20.7-8.2L21 73.2l20.6 19.7 22.9-11.3-9.1-6.5ZM101.9 81.1l7.1-5.8L85 61 77.7 66l24.2 15ZM70 33.5a13.9 13.9 0 1 0-25.6 1.3L56.9 65l2.7.2L70 33.5Z"
            ></path>
            <path
              d="m67.8 50.1-3.9 2-4.3 13.1L57 65l-3.3-7.9-12.9 6.4 21.7 7.1 19-12.3L67.7 50ZM64.4 111.6l34.4-27.8-24.1-15.4L64.1 76l6.8 6-26 14 19.5 15.6Z"
            ></path>
            <circle cx="57" cy="29" r="9.5" stroke="currentColor"></circle>
          </svg>
        </div>
        <a
          target="_blank"
          rel="noreferrer noopener"
          class="c-link"
          data-adress-url
        >
          <div>
            <h1>Connect724 GmbH</h1>
            <p data-adress-footer></p>
          </div>
        </a>
      </div>
      <div class="flex items-center gap-4">
        <div class="size-16">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 128 128"
            stroke-width={2.5}
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <title>E-Mail</title>
            <path
              d="M64 122.35a58.35 58.35 0 1 0 0-116.7 58.35 58.35 0 0 0 0 116.7Z"
            ></path>
            <path
              d="M95.4 36H31.8a6.8 6.8 0 0 0-6.8 6.8v42.4a6.8 6.8 0 0 0 6.8 6.81h63.6a6.8 6.8 0 0 0 6.8-6.8V42.8a6.8 6.8 0 0 0-6.8-6.8Z"
            ></path>
            <path
              d="m26.6 38.43 37.53 31.84 36.5-31.84M26.48 89.42l30.59-24.84M70.84 64l30.31 25.42"
            ></path>
          </svg>
        </div>
        <a href="mailto:office@connect724.at" class="c-link">
          office@connect724.at
        </a>
      </div>
      <div class="flex items-center gap-4">
        <div class="size-16">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 128 128"
            stroke-width={2.5}
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <title>Telefon</title>
            <path
              d="M53.5 27.7c.2.4.6.3.9.5.9.5 1.6 1.3 2.1 2.3l6.2 11.4a5.1 5.1 0 0 1-2.2 7.4 278.2 278.2 0 0 1-5.9 3.5v.2c.9 4.2 2.2 8.3 4 12.2a44.2 44.2 0 0 0 11 14.6l.2-.1c2-1.1 4-2.4 6.2-3.3a5 5 0 0 1 6.6 2.2l6.4 12a5 5 0 0 1-1.7 6.7 16.2 16.2 0 0 1-17.6 1c-5.7-2.9-10.7-7-14.7-12-3.8-4.7-7-9.8-9.7-15.2-2.2-4.2-4-8.5-5.3-12.9a34.4 34.4 0 0 1-1.3-15.5 25.8 25.8 0 0 1 3.1-8.2 16.6 16.6 0 0 1 7.9-6.5c.8-.4 1.6-.5 2.5-.5.3 0 .6.2.8 0l.5.2Z"
            ></path>
            <path d="M64 123A59 59 0 1 0 64 5a59 59 0 0 0 0 118Z"></path>
          </svg>
        </div>
        <a href="tel:+4357240" class="c-link">+43 (0)5 7240</a>
      </div>
    </div>
  </div>

  <div
    class="mx-auto py-6 px-8 xl:px-20 flex flex-col-reverse lg:flex-row md:items-center md:justify-between gap-x-8 gap-y-6"
  >
    <div
      class="shrink-0 text-center flex flex-col md:flex-row flex-wrap items-center gap-x-6 gap-y-2 justify-center lg:justify-end"
    >
      <div>
        &copy; {new Date().getFullYear()} connect724 GmbH
      </div>
      <div class="max-md:hidden">|</div>
      <div>Alle Rechte vorbehalten</div>
    </div>
    <div
      class="flex flex-col md:flex-row flex-wrap items-center gap-x-6 gap-y-2 justify-center lg:justify-end"
    >
      <div>Hier werden keine Cookies gesetzt!</div>
      <div class="max-md:hidden">|</div>
      <div>
        <a href="/nutzungsbedingungen" class="c-link">Nutzungsbedingungen</a>
      </div>
      <div class="max-md:hidden">|</div>
      <div>
        <a href="/impressum" class="c-link">Impressum</a>
      </div>
    </div>
  </div>
</footer>

<script>
  import dateCheck from "@/utils/dateCheck";
  const adress = document.querySelector("[data-adress-footer]")!;
  const url = document.querySelector("[data-adress-url]")! as HTMLLinkElement;
  if (dateCheck()) {
    adress.textContent = "Hainburger Straße 33, 1030 Wien";
    url.href = "https://maps.app.goo.gl/ovF5RZGjSqJ9gBY68";
  } else {
    adress.textContent = "Heizwerkstraße 6a, 1230 Wien";
    url.href = "https://maps.app.goo.gl/MKK7oqi8TVg9Rcrr6";
  }
</script>